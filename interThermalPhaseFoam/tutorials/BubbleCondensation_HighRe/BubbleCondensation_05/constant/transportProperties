FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      transportProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

twoPhase
{
    transportModel  twoPhase;
    phase1          phase1;
    phase2          phase2;
}

//Water 450K
phase1
{
    transportModel  		Newtonian;
    nu              		nu [ 0 2 -1 0 0 0 0 ] 1.554E-6; //15.54E-6;
    rho             		rho [ 1 -3 0 0 0 0 0 ] 900;
    thermalTransportModel	Fourier;
    lambda			lambda [1 1 -3 -1 0 0 0] 1.0;
    cp				cp [ 0 2 -2 -1 0 0 0] 2000;
}

phase2
{
    transportModel		Newtonian;
    nu				nu [ 0 2 -1 0 0 0 0 ] 5E-6;
    rho				rho [ 1 -3 0 0 0 0 0 ] 10;
    thermalTransportModel	Fourier;
    lambda			lambda [1 1 -3 -1 0 0 0] 0.02;
    cp				cp [ 0 2 -2 -1 0 0 0] 2500;
}

sigma                           sigma [ 1 0 -2 0 0 0 0 ] 0.007471;
T_0				T_0 [0 0 0 1 0 0 0] 100;


ImprovedTransportBlending yes;

thermalPhaseChange
{
	model                HiLoNoPCVAlpha1;
	h_lv		         h_lv  [0 2 -2 0 0 0 0 ] 2000E3;
	T_sat		         T_sat [0 0 0 1 0 0 0]  100;
	CondThresh           0.3; //Interface threshold for condensing cell pairs
	EvapThresh           0.05; //Interface threshold for evaporating cell pairs
	RelaxFac             1.0; //Under-relax phase change rate in each time step
}

surfaceTensionForce
{
	model               Brackbill;
//	Cpc                  0; //Interface sharpening factor
//	ThresholdFactor      0; //Cutoff surface tension force fluxes below this fraction of the average
//	NormalFilterFactor   0; //Portion of non-int-normal surface tension force to cut
}


